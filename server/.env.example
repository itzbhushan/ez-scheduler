# Local Development Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration - Using PostgreSQL (Docker)
DATABASE_URL=postgresql://ez_user:ez_password@server-postgres-1:5432/ez_scheduler

# Redis Configuration - Optional for local development
REDIS_URL=redis://server-redis-1:6379

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO
APP_BASE_DOMAIN=http://localhost
FORM_STORAGE_PATH=./forms

# MCP Server Configuration - Local development uses port 8080
MCP_PORT=8080

# Anthropic API Key (set this to your actual key)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
